<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BudgetFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <Button
            android:id="@+id/btnBackBudget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:layout_gravity="start"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tvBudgetLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Your Budget Goal Per Month"
            android:textSize="20sp"
            android:layout_marginBottom="16dp" />


        <!-- Label for Category Spinner -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <!-- Spinner for Category -->
        <Spinner
            android:id="@+id/spinnerCategoryBudget"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp" />

        <!-- Label for Month Spinner -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Month"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <!-- Spinner for Month -->
        <Spinner
            android:id="@+id/spinnerMonth"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tvMinBudget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Min Budget: R0"
            android:layout_marginBottom="8dp" />

        <SeekBar
            android:id="@+id/seekBarMinBudget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="10000"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tvMaxBudget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Max Budget: R0"
            android:layout_marginBottom="8dp" />

        <SeekBar
            android:id="@+id/seekBarMaxBudget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="10000"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnSaveBudget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Budget Goal" />

        <TextView
            android:id="@+id/tvBudgetGoalsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Saved Budget Goals"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewBudgetGoals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:layout_marginBottom="16dp" />


    </LinearLayout>
</ScrollView>
