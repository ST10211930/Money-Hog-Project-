<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:id="@+id/btnBackExpenses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_gravity="start"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/etDateFrom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Date From (YYYY-MM-DD)"
        android:focusable="false"
        android:clickable="true"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etDateTo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Date To (YYYY-MM-DD)"
        android:focusable="false"
        android:clickable="true"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnFilterExpenses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Filter Expenses"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnClearFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clear Filter"
        android:layout_marginBottom="16dp" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewExpenses"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tvTotalPerCategoryTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Spent Per Category "
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvTotalPerCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Totals per category will appear here"
        android:textSize="16sp"
        android:layout_marginTop="16dp" />

</LinearLayout>
